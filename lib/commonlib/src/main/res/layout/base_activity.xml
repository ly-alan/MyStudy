<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_toolbar_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <com.android.commonlib.view.custom.TitleBar
        android:id="@+id/titlebar_toolbar_activity"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize" />

    <ViewStub
        android:id="@+id/vsc_toolbar_activity_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar_toolbar_activity" />

</RelativeLayout>